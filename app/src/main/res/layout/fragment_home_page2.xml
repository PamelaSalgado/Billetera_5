<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="326dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/fondocel"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="Inicio"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="74dp"
            android:layout_height="67dp"
            android:layout_marginStart="300dp"
            app:srcCompat="@drawable/circular" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="Hola, Usuario!"
            android:textColor="#D5DDE3"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="Balance Total"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="$124.57"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/campana" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="234dp"
        android:fontFamily="casual"
        android:text="Ultimas transacciones"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/Linear"
        android:layout_width="411dp"
        android:layout_height="65dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/button_activity_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:backgroundTint="#7ADA58"
            android:text="Enviar Dinero"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:text="Ingresar Dinero" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="409dp"
        android:layout_height="306dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="70dip"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/hombrehermoso" />

            <TextView
                android:id="@+id/textenviardinero"
                android:layout_width="89dp"
                android:layout_height="60dip"
                android:layout_marginStart="160dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:text="+68.0"
                android:textScaleX="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="70dip"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/mujerfea" />

            <TextView
                android:id="@+id/textenviardinero"
                android:layout_width="89dp"
                android:layout_height="60dip"
                android:layout_marginStart="160dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:text="-20.0"
                android:textScaleX="2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="70dip"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/mujerhermosa" />

            <TextView
                android:id="@+id/textenviardinero"
                android:layout_width="89dp"
                android:layout_height="60dip"
                android:layout_marginStart="160dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:text="+120.0"
                android:textScaleX="2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="70dip"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/hombrefeo" />

            <TextView
                android:id="@+id/textenviardinero"
                android:layout_width="89dp"
                android:layout_height="60dip"
                android:layout_marginStart="160dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:text="-54.20"
                android:textScaleX="2" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>